/* Write a C program to count characters in a string */
#include <stdio.h>

int main() {
    char s[100];
    int i = 0;

    printf("Enter a string: ");
    fgets(s, sizeof(s), stdin);   // read input

    while (s[i] != '\0' && s[i] != '\n')
        i++;

    printf("Characters = %d", i);
    return 0;
}
