/* Program to read N numbers into an array and find the largest and smallest elements */
#include <stdio.h>
int main() {
    int n, i, arr[50], max, min;
    scanf("%d", &n);               // Input number of elements
    for(i=0;i<n;i++) scanf("%d",&arr[i]);
    max = min = arr[0];
    for(i=1;i<n;i++){
        if(arr[i]>max) max=arr[i];
        if(arr[i]<min) min=arr[i];
    }
    printf("Largest = %d\nSmallest = %d", max, min);
    return 0;
}

/* Input:
5
10 25 5 30 15
Output:
Largest = 30
Smallest = 5
*/
