/* Program to search for a record by ID from an array of structures and display details if found */
#include <stdio.h>
struct Item { int id; char name[20]; };
int main() {
    struct Item i[3];
    for(int j=0;j<3;j++) scanf("%d %s",&i[j].id,i[j].name);
    int sid; scanf("%d",&sid);
    for(int j=0;j<3;j++)
        if(i[j].id==sid)
            printf("ID:%d Name:%s\n",i[j].id,i[j].name);
    return 0;
}

/* Input:
101 Pen
102 Book
103 Bag
102
Output:
ID:102 Name:Book
*/
