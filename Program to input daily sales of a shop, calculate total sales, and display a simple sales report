/* Program to input daily sales of a shop, calculate total sales, and display a simple sales report */
#include <stdio.h>
int main() {
    int sales[7], total=0;
    for(int i=0;i<7;i++){
        scanf("%d",&sales[i]);
        total+=sales[i];
    }
    printf("Total Sales = %d", total);
    return 0;
}

/* Input:
100 200 150 300 250 200 100
Output:
Total Sales = 1300
*/
