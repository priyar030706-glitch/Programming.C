/* Write a C program to store employee details using structure */
#include <stdio.h>
struct Employee {
    char name[20];
    int id;
    float salary;
};

int main() {
    struct Employee e;
    scanf("%s %d %f", e.name, &e.id, &e.salary);
    printf("Name: %s\nID: %d\nSalary: %.2f", e.name, e.id, e.salary);
    return 0;
}
