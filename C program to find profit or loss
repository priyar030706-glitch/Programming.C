/* Write a C program to find profit or loss */
#include <stdio.h>
int main() {
    float cost, sell;
    printf("Enter cost price and selling price: ");
    scanf("%f %f", &cost, &sell);
    if (sell > cost)
        printf("Profit = %.2f", sell - cost);
    else
        printf("Loss = %.2f", cost - sell);
    return 0;
}
