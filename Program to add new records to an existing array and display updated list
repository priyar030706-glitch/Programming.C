/* Program to add new records to an existing array and display updated list */
#include <stdio.h>
int main() {
    int arr[5]={10,20,30}, n=3;
    int newVal; scanf("%d", &newVal);
    arr[n]=newVal; n++;
    for(int i=0;i<n;i++) printf("%d ", arr[i]);
    return 0;
}

/* Input:
40
Output:
10 20 30 40
*/
